<UserControl x:Class="UI.Components.StudentsList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI.Components"
             xmlns:converters="clr-namespace:UI.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:PasswordToAsterisksConverter x:Key="PassConverter" />
    </UserControl.Resources>
    <Grid>
        <DataGrid ItemsSource="{Binding Users}" Name="students" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="#" IsReadOnly="True" Binding="{Binding ID}" />
                <DataGridTextColumn Header="Names" IsReadOnly="True" Binding="{Binding Names}" />
                <DataGridTextColumn Header="Email" IsReadOnly="True" Binding="{Binding Email}" />
                <DataGridTextColumn Header="Role" IsReadOnly="True" Binding="{Binding Role}" />
                <DataGridTextColumn Header="Password" IsReadOnly="True" Binding="{Binding Password, Converter={StaticResource PassConverter}}" />
                <DataGridTextColumn Header="Expires in" Binding="{Binding Expires}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
